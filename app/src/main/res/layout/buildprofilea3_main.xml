<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/lilac"
    tools:context=".MainActivity">
    
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Light">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/twenty_padding"
        android:text="@string/welcome_msg"
        android:textColor="@color/magenta"/>

    <EditText
        android:id="@+id/nameEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_marginStart"
        android:layout_marginBottom="@dimen/twenty_marginBottom"
        android:padding="@dimen/twenty_padding"
        android:hint="@string/enter_name"
        android:textColor="@color/magenta"
        android:inputType="text"/>

    <EditText
        android:id="@+id/age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/twenty_padding"
        android:layout_marginStart="@dimen/twenty_marginStart"
        android:layout_marginBottom="@dimen/twenty_marginBottom"
        android:hint="@string/enter_age"
        android:textColor="@color/magenta"
        android:inputType="text"/>

    <EditText
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/twenty_padding"
        android:layout_marginStart="@dimen/twenty_marginStart"
        android:layout_marginBottom="@dimen/twenty_marginBottom"
        android:hint="@string/user_description"
        android:textColor="@color/magenta"
        android:inputType="text"/>

    <EditText
        android:id="@+id/occupation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/twenty_padding"
        android:layout_marginStart="@dimen/twenty_marginStart"
        android:layout_marginBottom="@dimen/twenty_marginBottom"
        android:hint="@string/enter_occupation"
        android:textColor="@color/magenta"
        android:inputType="text"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/twenty_marginStart"
        android:layout_marginBottom="@dimen/twenty_marginBottom"
        android:padding="@dimen/twenty_padding"
        android:text="@string/timeTomeet"
        android:background="@color/magenta"
        android:onClick="getSecondActivity" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible" />

</LinearLayout>